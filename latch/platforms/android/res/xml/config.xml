<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dev.latch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <name>Latch</name>
    <description>
       Latch abbreviated for Location Chat, is a cross platform messaging app which allows users to chat and interact in a user friendly environment based on his location. Users can join groups based on their interests, discover other people and communicate via a very simple chat environment, all based on their current location.
    </description>
    <author email="psarthi16@gmail.com" href="http://latchapp.cf">
        BugSAP
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
